<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.alkaiyat.ahmad.net.ahmadalkaiyats.CategoriesFragement"
    android:padding="2dp"
    android:orientation="vertical">

    <EditText android:id="@+id/InputSearchCategories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Search Categories.."
        android:paddingTop="89dp"
        android:inputType="textVisiblePassword"/>

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"> <!-- For the Pull Down Refreshment-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/categories_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:paddingTop="4dp"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
