<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="www.alkaiyat.ahmad.net.ahmadalkaiyats.MyListFragement">
    <!-- Editext for Search -->
    <EditText
        android:id="@+id/inputSearchMyList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Search MyList.."
        android:inputType="textVisiblePassword"
        android:paddingTop="89dp" />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_layout_myList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"> <!-- For the Pull Down Refreshment-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mylist_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:scrollbars="vertical" />

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
